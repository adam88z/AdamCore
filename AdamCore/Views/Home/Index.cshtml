                            url: '@Url.Action("ImageUploadGet", "Home")', //retrieves the array and stores it in 'data'
                            data: 'data',
                            success: function (data) {
                                var i = 0;
                                $("#homeimage").attr("src", data[i]);

                                var i = 0;

                                setInterval(function () {
                                    document.getElementById("homeimage").src = data[i];
                                    if (i == (data.length - 1)) {
                                        i = 0;
                                        //you can even clear interval here to make heading stay as last one in array
                                        //cleanInterval(intervalId);

                                    } else {
                                        i++;
                                    }
                                }, 8000)


                            }
                        });
    </script>

